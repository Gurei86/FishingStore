@using FishingStore.Model.Entities
@model User
<main class="main__content_wrapper">

    <!-- Start breadcrumb section -->
    <section class="breadcrumb__section breadcrumb__bg" style="background: url(https://kovorot.by/wp-content/themes/kovorot/assets/img/banner-desktop-1.jpg);
">
        <div class="container">
            <div class="row row-cols-1">
                <div class="col">
                    <div class="breadcrumb__content">
                        <h1 class="breadcrumb__content--title text-white mb-10">Личный кабинет</h1>
                        <ul class="breadcrumb__content--menu d-flex">
                            <li class="breadcrumb__content--menu__items"><a class="text-white" href="/Home/Index">Главная</a></li>
                            <li class="breadcrumb__content--menu__items"><span class="text-white">Личный кабинет</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End breadcrumb section -->
    <!-- my account section start -->
    <section class="my__account--section section--padding">
        <div class="container">
            <div class="my__account--section__inner border-radius-10 d-flex">
                
                <div class="account__wrapper">
                    <div class="account__content">
                        <h3 class="account__content--title mb-20">Обо мне</h3>
                        <div class="account__details two">
                            <h4 class="account__details--title">Email: @Model.Email</h4>
                            <p class="account__details--desc">Имя: @Model.FullName</p>
                        </div>
                        @if(@Model.RoleId==1)
                        {
                        <a class="product__items--action__cart--btn primary__btn" asp-controller="Admin" asp-action="Admin" >
                                                            <svg class="product__items--action__cart--btn__icon" xmlns="http://www.w3.org/2000/svg" width="13.897" height="14.565" viewBox="0 0 18.897 21.565">
                                                                <path d="M16.84,8.082V6.091a4.725,4.725,0,1,0-9.449,0v4.725a.675.675,0,0,0,1.35,0V9.432h5.4V8.082h-5.4V6.091a3.375,3.375,0,0,1,6.75,0v4.691a.675.675,0,1,0,1.35,0V9.433h3.374V21.581H4.017V9.432H6.041V8.082H2.667V21.641a1.289,1.289,0,0,0,1.289,1.29h16.32a1.289,1.289,0,0,0,1.289-1.29V8.082Z" transform="translate(-2.667 -1.366)" fill="currentColor"></path>
                                                            </svg>
                                                            <span class="add__to--cart__text"> Перейти в админ-панель</span>
                                                        </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- my account section end -->
   

</main>